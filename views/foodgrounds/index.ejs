<%- include ('../partials/header') %>
<div class="container-fluid py-2">
  <div class="bg-light bottom-border mb-3 rounded-3">
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col">
          <h1><i class="fas fa-utensils"></i> Welcome To Food Paradise!!!</h1>
          <p>Explore the Delicious and Exotic Food Around the World</p>
        </div>
      </div>
      <a class="btn btn-primary mb-3" href="/foodgrounds/new">
        Add New Foodground
      </a>
      <div class="row">
        <div class="col-md-6">
          <form method="GET" action="/foodgrounds" id="foodground-search">
            <div class="mb-3">
              <input
                type="text"
                class="form-control"
                name="search"
                id="inputemail"
                placeholder="Foodground search...."
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="row d-flex justify-content-around">
    <% foodgrounds.forEach(function(foodground){ %>
    <div class="card" style="max-width: 300px; height: 400px; border: none;">
      <div class="row d-flex justify-content-center align-items-center" style="height: 80%;">
        <img src="<%= foodground.image.path%>" style="width: 300px" />
      </div>
      <div class="row text-center">
        <h5><%= foodground.name %></h5>
        <a href="/foodgrounds/<%= foodground.id%>" class="btn btn-primary"
          >More Info</a
        >
      </div>
    </div>
    <%}); %>
  </div>
</div>
<%- include ('../partials/footer') %>
