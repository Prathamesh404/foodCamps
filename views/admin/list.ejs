<%- include ('../partials/header')%>

<div class="container">
  <div class="row d-flex justify-content-center">
    <h1 class="text-center">List all Users</h1>
    <table class="table table-warning table-bordered table-hover mb-3">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Role</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <% user.forEach(function(user){ %>
      <tbody>
        <tr>
          <% if(user.role != 'admin'){%>
          <td><%= user.name %></td>
          <td><%= user.role %></td>
          <td>
            <form
              action="/admin/<%= user._id%>/user-delete?_method=DELETE"
              method="POST"
              style="display: inline"
            >
              <button class="btn btn-danger btn-xs">delete</button>
            </form>
          </td>
          <%};%>
        </tr>
      </tbody>
      <%}); %>
    </table>
    <h1 class="text-center">List all foodgrounds</h1>
    <table class="table table-warning table-bordered table-hover mb-3">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Image</th>
          <th scope="col">Description</th>
          <th scope="col">Cost</th>
          <th scope="col">location</th>
          <th scope="col">Author</th>
          <th scope="col">Date of creation</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <% foodground.forEach(function(foodground){ %>
      <tbody>
        <tr>
          <td><%= foodground.name %></td>
          <td>
            <img src="<%= foodground.image.path %>" style="width: 250px" />
          </td>
          <td><%= foodground.description %></td>
          <td><%= foodground.cost %></td>
          <td><%= foodground.location %></td>
          <td><%= foodground.author.username %></td>
          <td>
            <%=moment(foodground.createdAt).format('MMMM Do YYYY, h:mm:ss a')%>
          </td>
          <td>
            <form
              action="/foodgrounds/<%= foodground._id%>/delete?_method=DELETE"
              method="POST"
              style="display: inline"
            >
              <button class="btn btn-danger btn-xs">delete</button>
            </form>
          </td>
        </tr>
      </tbody>
      <%}); %>
    </table>
    <h1 class="text-center">List all Comments</h1>
    <table class="table table-bordered table-hover mb-3">
      <thead>
        <tr>
          <th scope="col">Comment text</th>
          <th scope="col">Author</th>
          <th scope="col">Date of comment</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <% comment.forEach(function(comment){ %>
      <tbody>
        <tr>
          <td><%= comment.text %></td>
          <td><%= comment.author.username %></td>
          <td>
            <%= moment(comment.createdAt).format('MMMM Do YYYY, h:mm:ss a') %>
          </td>
          <td>
            <form
            action="/foodgrounds/<%= foodground._id%>/delete?_method=DELETE"
            method="POST"
            style="display: inline"
          >
            <button class="btn btn-danger btn-xs">delete</button>
          </form>
          </td>
        </tr>
      </tbody>
      <%}); %>
    </table>
  </div>
</div>
<%- include ('../partials/footer')%>
