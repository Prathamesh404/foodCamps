<%- include ('../partials/header') %>
<div class="container">
  <h1 class="d-flex justify-content-center">
    Add New Comment to <%= foodground.name %>
  </h1>
  <div class="row m-5 d-flex justify-content-center">
    <div class="col-md-4">
      <form action="/foodgrounds/<%= foodground._id %>/comments" method="POST">
        <div class="mb-3">
          <label for="inputdescription" class="form-label">Comment</label>
          <textarea
            class="form-control <%= typeof error.text != 'undefined' ? 'is-invalid' : ''%>"
            id="inputdescription"
            rows="3"
            placeholder="Comment"
            name="description"
          ></textarea>
          <div class="invalid-feedback">
            <%= typeof error.text != 'undefined' ? error.text :
            ''%>
          </div>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include ('../partials/footer') %>
