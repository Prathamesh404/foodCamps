<%- include ('partials/header') %>
<div class="container">
  <h1 class="d-flex justify-content-center">Sign Up</h1>
  <div class="row m-5 d-flex justify-content-center">
    <div class="col-md-4">
      <form action="/register" method="POST">
        <div class="mb-3">
          <label for="usernameinput" class="form-label">Username</label>
          <input
            type="text"
            class="form-control <%= typeof error.name != 'undefined' ? 'is-invalid' : ''%>"
            name="username"
            id="usernameinput"
            placeholder="username"
          />
          <div class="invalid-feedback">
            <%= typeof error.name != 'undefined' ? error.name : ''%>
          </div>
        </div>
        <div class="mb-3">
          <label for="inputpassword" class="form-label">Password</label>
          <input
            type="password"
            class="form-control <%= typeof error.password != 'undefined' ? 'is-invalid' : ''%>"
            id="inputpassword"
            name="password"
            placeholder="password"
          />
          <div class="invalid-feedback">
            <%= typeof error.password != 'undefined' ? error.password : ''%>
          </div>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include ('partials/footer') %>
