<%- include ('../partials/header') %>
<div class="container">
  <h1 class="d-flex justify-content-center">Edit</h1>
  <div class="row m-3 d-flex justify-content-center">
    <div class="col-md-4">
      <form action="/foodgrounds/<%=foodground._id%>?_method=PUT" method="POST">
        <div class="mb-3">
          <label for="inputname" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            name="name"
            id="inputname"
            value="<%= foodground.name %>"
          />
        </div>
        <div class="mb-3">
          <label for="inputimage" class="form-label">Image URL</label>
          <input
            type="text"
            class="form-control"
            id="inputimage"
            name="image"
            value="<%= foodground.image.path %>"
          />
        </div>
        <div class="mb-3">
          <label for="inputcost" class="form-label">Cost</label>
          <input
            type="number"
            class="form-control"
            id="inputcost"
            name="cost"
            value="<%= foodground.cost %>"
            step="0.01"
            min="0"
          />
        </div>
        <div class="mb-3">
          <label for="inputlocation" class="form-label">Location</label>
          <input
            type="text"
            class="form-control"
            id="inputlocation"
            name="location"
            value="<%= foodground.location %>"
          />
        </div>
        <div class="mb-3">
          <label for="inputdescription" class="form-label">Description</label>
          <textarea
            class="form-control"
            id="inputdescription"
            rows="3"
            name="description"
          ><%= foodground.description%></textarea>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include ('../partials/footer') %>
