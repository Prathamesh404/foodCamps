<%- include ('partials/header') %>
<div class="container">
  <div class="row">
    <div class="col d-flex justify-content-center">
      <img
        class="rounded-circle profile-pic"
        src="<%= user.avatar_image.path%>"
      />
    </div>
  </div>
  <div class="col d-flex justify-content-center mt-2">
    <div class="card" style="width: 18rem">
      <div class="card-body text-center">
        <p class="card-text">Name : <%= user.name%></p>
        <p class="card-text">Role : <%= user.role%></p>
        <a
          href="/edit"
          class="btn btn-warning mx-2"
          type="button"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
          >Edit</a
        >
        <a href="/logout" class="btn btn-primary">Logout</a>
      </div>
    </div>
  </div>
</div>
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Change Avatar</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form action="/edit-user-details?_method=PUT" method="POST">
          <div class="mb-3">
            <label for="inputurl" class="form-label">Image URL</label>
            <input
              type="text"
              class="form-control"
              name="image"
              id="inputurl"
              value="<%= user.avatar_image.path %>"
            />
          </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>
      </div>
    </div>
  </div>
</div>
<%- include ('partials/footer') %>