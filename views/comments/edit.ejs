<%- include ('../partials/header') %>
<div class="container">
  <% comment.foodground.forEach(function(foodground){%>
  <h1 class="d-flex justify-content-center">
    Edit comment of <%=foodground.name%>
  </h1>
  <%}) %>
  <div class="row m-5 d-flex justify-content-center">
    <div class="col-md-4">
      <form
        action="/foodgrounds/<%= foodground_id %>/comments/<%=comment._id %>?_method=PUT"
        method="POST"
      >
        <div class="mb-3">
          <label for="inputtext" class="form-label">Comment</label>
          <textarea class="form-control" id="inputtext" rows="3" name="text">
<%= comment.text%></textarea
          >
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include ('../partials/footer') %>
